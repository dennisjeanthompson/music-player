<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Player</title>
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Music Player</h1>
        
        <!-- Search Form -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4">Search Songs</h2>
            <form action="/" method="GET" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                        <input type="text" name="search" value="<%= search %>" placeholder="Search by name or artist" class="input">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">From Date</label>
                        <input type="date" name="dateStart" value="<%= dateStart %>" class="input">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">To Date</label>
                        <input type="date" name="dateEnd" value="<%= dateEnd %>" class="input">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <!-- Add New Song Form -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4">Add New Song</h2>
            <form action="/songs" method="POST" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Song Name</label>
                    <input type="text" name="name" required placeholder="Song Name" class="input">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Artist</label>
                    <input type="text" name="artist" placeholder="Artist" class="input">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea name="description" placeholder="Description" class="input h-24"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Song</button>
            </form>
        </div>

        <!-- Songs List -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Songs</h2>
            <div class="space-y-6">
                <% songs.forEach(song => { %>
                    <div class="border-b border-gray-200 pb-6 last:border-b-0 last:pb-0">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-lg font-semibold"><%= song.name %></h3>
                                <p class="text-gray-600"><strong>Artist:</strong> <%= song.artist %></p>
                                <p class="text-gray-500 text-sm">Added: <%= new Date(song.date_created).toLocaleString() %></p>
                            </div>
                            <form action="/songs/<%= song.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        
                        <p class="text-gray-700 mb-4"><%= song.description %></p>
                        
                        <form action="/songs/<%= song.id %>?_method=PUT" method="POST" class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Song Name</label>
                                    <input type="text" name="name" value="<%= song.name %>" required class="input">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Artist</label>
                                    <input type="text" name="artist" value="<%= song.artist %>" class="input">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                                <textarea name="description" class="input h-24"><%= song.description %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>